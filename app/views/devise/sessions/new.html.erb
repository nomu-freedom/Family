<div class="main">
  <div class="middle">　
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2 class="head">ログイン</h2>
      <div class="main_form">
        <div class="wrap_form">
          <div class="field">
            <%= f.label :email, class:"label_field" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"field_input" %>
          </div>

          <div class="field">
            <%= f.label :password, class:"label_field"%><br />
            <%= f.password_field :password, autocomplete: "current-password", class:"field_input" %>
          </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログインする", class:"submit" %>
        </div>

        <div class="sign_up_footer">
          <p class="footer_string">----------------　登録がまだの方はこちら　----------------</p>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
